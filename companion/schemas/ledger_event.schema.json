{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/ci/ledger_event.schema.json",
  "title": "CI Ledger Event",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "event_id",
    "run_id",
    "timestamp",
    "node_id",
    "invariant_ids",
    "probe_refs",
    "channel_drift",
    "seam_flags",
    "decision"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^0\\.1\\.0$"
    },
    "event_id": {
      "type": "string",
      "pattern": "^LE-\\d{6}$"
    },
    "run_id": {
      "type": "string",
      "pattern": "^RUN-\\d{6}$"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "node_id": {
      "type": "string",
      "pattern": "^Q\\d{6}$"
    },
    "edge_id": {
      "type": "string",
      "pattern": "^E\\d{6}$"
    },
    "invariant_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^I-[A-Z0-9-]+$"
      }
    },
    "probe_refs": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^PO-\\d{6}$"
      }
    },
    "channel_drift": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "seam_flags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^SF-\\d{6}$"
      }
    },
    "decision": {
      "type": "string",
      "enum": [
        "retain",
        "downgrade",
        "review"
      ]
    },
    "notes": {
      "type": "string"
    }
  }
}
