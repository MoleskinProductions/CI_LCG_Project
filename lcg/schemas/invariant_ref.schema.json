{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/lcg/invariant_ref.schema.json",
  "title": "InvariantRef",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "name"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^I-[A-Z]{2,5}-\\d{3}$"
    },
    "name": {
      "type": "string"
    },
    "definition": {
      "type": "string"
    },
    "role": {
      "type": "string",
      "enum": [
        "glue_key",
        "discriminator",
        "regime_marker",
        "budget",
        "summary"
      ]
    }
  }
}