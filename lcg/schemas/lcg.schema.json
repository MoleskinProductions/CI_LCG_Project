{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.org/lcg/lcg.schema.json",
  "title": "Leak Constellation Graph Bundle",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "generated_at",
    "nodes",
    "edges"
  ],
  "properties": {
    "version": {
      "type": "string",
      "const": "0.1"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "node.schema.json"
      },
      "minItems": 1
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "edge.schema.json"
      }
    }
  }
}